############################
# Application
############################
# Name is used in docs/logs only
APP_NAME={{ .AppName }}
# LARGO_ENV controls mode: dev|prod|test
LARGO_ENV=dev
# Port for HTTP server
PORT=8080

############################
# Database (Postgres)
############################
# Required for largo migrate; server does not need it to boot
DATABASE_URL=postgres://user:pass@localhost:5432/{{ .AppName }}?sslmode=disable

############################
# HTTP Server
############################
# Read header/body timeout (seconds)
HTTP_READ_TIMEOUT=5
# Write timeout (seconds)
HTTP_WRITE_TIMEOUT=10
# Idle timeout (seconds)
HTTP_IDLE_TIMEOUT=60
# Max header bytes limit
HTTP_MAX_HEADER_BYTES=1048576
